#import "ProfileNavView.h"

@implementation ProfileNavView
@synthesize segment_title;
@synthesize detailView;
@synthesize msgView;

- (id)initWithNibName:(NSString *)nibNameOrNil bundle:(NSBundle *)nibBundleOrNil
{
    self = [super initWithNibName:nibNameOrNil bundle:nibBundleOrNil];
    if (self) {
        // Custom initialization
        self.title = @"个人资料";
        self.tabBarItem.image = [UIImage imageNamed:@"first"];
    }

    return self;
}

- (void)didReceiveMemoryWarning
{
    // Releases the view if it doesn't have a superview.
    [super didReceiveMemoryWarning];
    
    // Release any cached data, images, etc that aren't in use.
}

#pragma mark - View lifecycle

- (void)viewDidLoad
{
    [super viewDidLoad];
    // Do any additional setup after loading the view from its nib.
    //加载所有的view
    self.detailView = [[ProfileDetailView alloc] init];
    self.msgView = [[MessageView alloc] init];
    self.msgView.view.hidden = YES;
    [self.view addSubview:self.detailView.view];
    [self.view addSubview:self.msgView.view];
}

- (void)viewDidUnload
{
    [self setSegment_title:nil];
    [super viewDidUnload];
    // Release any retained subviews of the main view.
    // e.g. self.myOutlet = nil;
    self.detailView = nil;
    self.msgView = nil;
}

- (IBAction)changed_segement:(id)sender 
{
    switch (segment_title.selectedSegmentIndex) 
    {
        case 0:
        {
            self.detailView.view.hidden = NO;
            self.msgView.view.hidden = YES;
        }
            break;
        case 1:
        {
            self.detailView.view.hidden = YES;
            self.msgView.view.hidden = NO;
        }
    }
}
@end
