#import "NewsBaseView.h"

@implementation NewsBaseView
@synthesize lastestNews;
@synthesize hotNews;
@synthesize hotPosts;
@synthesize viewMain;

- (id)initWithNibName:(NSString *)nibNameOrNil bundle:(NSBundle *)nibBundleOrNil
{
    self = [super initWithNibName:nibNameOrNil bundle:nibBundleOrNil];
    if (self) {
        // Custom initialization
        self.title = @"新闻";
        self.tabBarItem.image = [UIImage imageNamed:@"first"];
    }
    return self;
}

- (void)didReceiveMemoryWarning
{
    // Releases the view if it doesn't have a superview.
    [super didReceiveMemoryWarning];
    
    // Release any cached data, images, etc that aren't in use.
}

#pragma mark - View lifecycle

- (void)viewDidLoad
{
    [super viewDidLoad];
    // Do any additional setup after loading the view from its nib.
    self.lastestNews = [[NewsView alloc] init];
    self.hotNews = [[NewsView alloc] init];
    self.hotPosts = [[PostsView alloc] init];
    self.hotNews.view.hidden = YES;
    self.hotPosts.view.hidden = YES;
    [self.viewMain addSubview:self.lastestNews.view];
    [self.viewMain addSubview:self.hotNews.view];
    [self.viewMain addSubview:self.hotPosts.view];
}

- (void)viewDidUnload
{
    [self setViewMain:nil];
    [super viewDidUnload];
    // Release any retained subviews of the main view.
    // e.g. self.myOutlet = nil;
}


- (IBAction)selector_LatestNews:(id)sender {
    if (self.lastestNews) {
        self.lastestNews.view.hidden = NO;
    }
    if (self.hotNews) {
        self.hotNews.view.hidden = YES;
    }
    if (self.hotPosts) {
        self.hotPosts.view.hidden = YES;
    }
}

- (IBAction)selector_HotNews:(id)sender {
    if (self.lastestNews) {
        self.lastestNews.view.hidden = YES;
    }
    if (self.hotNews) {
        self.hotNews.view.hidden = NO;
    }
    if (self.hotPosts) {
        self.hotPosts.view.hidden = YES;
    }
}

- (IBAction)selector_HotPosts:(id)sender {
    if (self.lastestNews) {
        self.lastestNews.view.hidden = YES;
    }
    if (self.hotNews) {
        self.hotNews.view.hidden = YES;
    }
    if (self.hotPosts) {
        self.hotPosts.view.hidden = NO;
    }
}
@end
