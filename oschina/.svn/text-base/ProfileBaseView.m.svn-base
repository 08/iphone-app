#import "ProfileBaseView.h"

@implementation ProfileBaseView
@synthesize viewMain;
@synthesize detailView;
@synthesize msgView;

- (id)initWithNibName:(NSString *)nibNameOrNil bundle:(NSBundle *)nibBundleOrNil
{
    self = [super initWithNibName:nibNameOrNil bundle:nibBundleOrNil];
    if (self) {
        // Custom initialization
        self.title = @"个人资料";
        self.tabBarItem.image = [UIImage imageNamed:@"first"];
    }
    return self;
}

- (void)didReceiveMemoryWarning
{
    // Releases the view if it doesn't have a superview.
    [super didReceiveMemoryWarning];
    
    // Release any cached data, images, etc that aren't in use.
}

#pragma mark - View lifecycle

- (void)viewDidLoad
{
    [super viewDidLoad];
    //加载所有的view
    self.detailView = [[ProfileDetailView alloc] initWithNibName:@"ProfileDetailView" bundle:nil];
    self.msgView = [[MessageView alloc] initWithNibName:@"MessageView" bundle:nil];
    self.msgView.view.hidden = YES;
    [self.viewMain addSubview:self.detailView.view];
    [self.viewMain addSubview:self.msgView.view];
}

- (void)viewDidUnload
{
    [self setViewMain:nil];
    [super viewDidUnload];
    // Release any retained subviews of the main view.
    // e.g. self.myOutlet = nil;
    self.detailView = nil;
    self.msgView = nil;
}

/*
 这里的建议操作是指 
 
 总之 模仿 NextApp 的 Single.m 就行
 
 1,在 viewDidLoad方法中一次性加载多个view, 然后每个view.hidden = YES
 2,然后根据下面的按钮方法来指定将某些 view.hidden = NO;
 */
- (IBAction)selector_ProfileDetail:(id)sender {
    if (self.detailView) {
        self.detailView.view.hidden = NO;
    }
    if(self.msgView){
        self.msgView.view.hidden = YES;
    }
}

- (IBAction)selector_Msg:(id)sender {
    if (self.detailView) {
        self.detailView.view.hidden = YES;
    }
    if(self.msgView){
        self.msgView.view.hidden = NO;
    }
}

@end
